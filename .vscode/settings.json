{
  // ==============================================================================
  // Cursor IDE Performance Optimization Settings
  // VoiceAssistant 平台 - 性能优化配置
  // ==============================================================================

  // ============================================
  // File Watching & Search Exclusions (性能关键)
  // ============================================
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/__pycache__/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/*.pyc": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/coverage/**": true,
    "**/htmlcov/**": true,
    "**/*.log": true,
    "**/logs/**": true,
    "**/*_data/**": true,
    "**/bin/**": true,
    "**/.turbo/**": true,
    "**/.parcel-cache/**": true,
    "**/wandb/**": true,
    "**/mlruns/**": true,
    "**/.wandb/**": true,
    "**/go.sum": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.git": false,
    "**/.venv": false,
    "**/venv": false,
    "**/node_modules": false,
    "**/.turbo": true,
    "**/.parcel-cache": true,
    "**/.eslintcache": true,
    "**/.stylelintcache": true,
    "**/tsconfig.tsbuildinfo": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.venv": true,
    "**/venv": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/coverage": true,
    "**/.git": true,
    "**/bin": true,
    "**/*_data": true,
    "**/*.pb.go": true,
    "**/*_pb2.py": true,
    "**/*_pb2_grpc.py": true,
    "**/go.sum": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/.turbo": true,
    "**/.parcel-cache": true,
    "**/wandb": true,
    "**/mlruns": true,
    "**/.wandb": true,
    "**/.eslintcache": true,
    "**/.stylelintcache": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/*.wav": true,
    "**/*.mp3": true,
    "**/*.mp4": true,
    "**/*.avi": true
  },

  // ============================================
  // Editor Performance
  // ============================================
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.suggest.showWords": false,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [80, 120],
  "editor.wordWrap": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // ============================================
  // Files & Encoding
  // ============================================
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.encoding": "utf8",
  "files.eol": "\n",

  // ============================================
  // Language Specific Settings
  // ============================================

  // Go
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "go.useLanguageServer": true,
  "go.lintOnSave": "workspace",
  "go.lintTool": "golangci-lint",
  "go.buildOnSave": "off",
  "go.vetOnSave": "off",
  "go.formatTool": "goimports",
  "go.autocompleteUnimportedPackages": true,
  "go.gotoSymbol.includeImports": false,
  "go.testFlags": ["-v", "-race"],
  "gopls": {
    "analyses": {
      "unusedparams": true,
      "shadow": true,
      "nilness": true,
      "unusedwrite": true,
      "useany": true
    },
    "staticcheck": true,
    "ui.semanticTokens": true,
    "ui.completion.usePlaceholders": true,
    "directoryFilters": ["-node_modules", "-vendor", "-.venv", "-dist", "-build"]
  },

  // Python (Cursor 使用 cursorpyright，配置与 Pylance 兼容)
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.rulers": [88, 120]
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.extraPaths": ["./algo/common"],
  "python.analysis.exclude": [
    "**/node_modules",
    "**/.venv",
    "**/venv",
    "**/env",
    "**/__pycache__",
    "**/dist",
    "**/build",
    "**/.pytest_cache",
    "**/.mypy_cache",
    "**/.ruff_cache"
  ],
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoFormatStrings": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,

  // TypeScript/JavaScript
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.disableAutomaticTypeAcquisition": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",

  // YAML
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "kubernetes": [
      "deployments/k8s/**/*.yaml",
      "deployments/k8s/**/*.yml",
      "deployments/helm/**/*.yaml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ],
    "https://json.schemastore.org/docker-compose.json": [
      "**/docker-compose*.yml",
      "**/docker-compose*.yaml"
    ]
  },
  "yaml.customTags": ["!reference sequence"],

  // JSON
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Markdown
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Protobuf
  "[proto]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Shell Script
  "[shellscript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Makefile (必须使用 Tab)
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  // SQL
  "[sql]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },

  // ============================================
  // Terminal
  // ============================================
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 13,

  // ============================================
  // Git
  // ============================================
  "git.ignoreLimitWarning": true,
  "git.autofetch": false,
  "git.enableSmartCommit": false,
  "git.confirmSync": false,
  "git.decorations.enabled": true,
  "git.enableStatusBarSync": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,

  // ============================================
  // Explorer
  // ============================================
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.sortOrder": "type",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.test.ts",
    "*.tsx": "${capture}.test.tsx",
    "*.py": "${capture}_test.py, test_${capture}.py",
    "*.go": "${capture}_test.go",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .npmrc, .nvmrc",
    "go.mod": "go.sum",
    "Dockerfile": "docker-compose*.yml, .dockerignore",
    "README.md": "LICENSE, CHANGELOG.md, CONTRIBUTING.md"
  },

  // ============================================
  // Extensions
  // ============================================
  "extensions.ignoreRecommendations": false,

  // ============================================
  // File Associations
  // ============================================
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    ".cursorignore": "ignore",
    ".dockerignore": "ignore",
    "Dockerfile.*": "dockerfile",
    "*.proto": "proto",
    "Makefile": "makefile",
    "*.sh": "shellscript",
    ".env*": "properties",
    "*.toml": "toml"
  },

  // ============================================
  // Breadcrumbs
  // ============================================
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.symbolSortOrder": "position",

  // ============================================
  // Prettier (Frontend)
  // ============================================
  "prettier.enable": true,
  "prettier.requireConfig": false,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",

  // ============================================
  // ESLint (Frontend)
  // ============================================
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // ============================================
  // Docker
  // ============================================
  "docker.commands.build": "docker build --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",

  // ============================================
  // Cursor AI Specific
  // ============================================
  "cursor.chat.showSuggestedFiles": true,
  "cursor.chat.alwaysSearchWeb": false,

  // ============================================
  // Performance Tuning
  // ============================================
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,
  "problems.maxNumberOfResults": 1000,
  "search.maxResults": 20000,
  "search.quickOpen.includeSymbols": false,
  "security.workspace.trust.untrustedFiles": "open",

  // ============================================
  // Telemetry (可选关闭以提升性能)
  // ============================================
  "telemetry.telemetryLevel": "off"
}
