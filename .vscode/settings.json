{
  // ========================
  // VoiceAssistant AI Platform
  // VSCode/Cursor Workspace Settings
  // Optimized for Performance
  // ========================

  // ==================
  // Cursor AI Performance
  // ==================
  "cursor.general.enableChat": true,
  "cursor.general.enableCopilot": true,
  "cursor.cpp.disabledLanguages": [],

  // ==================
  // Editor Performance
  // ==================
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.linkedEditing": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.maxTokenizationLineLength": 20000,

  // File handling
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "files.maxMemoryForLargeFilesMB": 4096,

  // ==================
  // File Associations
  // ==================
  "files.associations": {
    "*.proto": "proto3",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "Dockerfile*": "dockerfile",
    ".cursorrules": "markdown",
    ".cursorignore": "ignore"
  },

  // ==================
  // Files to Exclude (Performance Critical)
  // ==================
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/vendor": true,
    "**/.venv": true,
    "**/venv": true,
    "**/*.egg-info": true,
    "**/milvus_data": true,
    "**/kafka_data": true,
    "**/clickhouse_data": true,
    "**/postgres_data": true,
    "**/redis_data": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/vendor/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/milvus_data/**": true,
    "**/kafka_data/**": true,
    "**/clickhouse_data/**": true,
    "**/postgres_data/**": true,
    "**/redis_data/**": true,
    "**/qdrant_data/**": true,
    "**/mongodb_data/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/coverage/**": true,
    "**/*.log": true
  },

  // ==================
  // Search Performance
  // ==================
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/*.pb.go": true,
    "**/*_pb2.py": true,
    "**/*_pb2_grpc.py": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.venv": true,
    "**/venv": true,
    "**/coverage": true,
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/go.sum": true,
    "**/*.log": true,
    "**/milvus_data": true,
    "**/kafka_data": true,
    "**/clickhouse_data": true
  },
  "search.followSymlinks": false,
  "search.smartCase": true,
  "search.maxResults": 20000,
  "search.quickOpen.includeSymbols": false,

  // ==================
  // Go Language
  // ==================
  "go.useLanguageServer": true,
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "go.formatTool": "goimports",
  "go.testFlags": ["-v", "-race"],
  "go.coverOnSave": false,
  "go.coverageDecorator": {
    "type": "gutter"
  },
  "go.toolsManagement.autoUpdate": true,
  "go.buildOnSave": "off",
  "go.vetOnSave": "off",
  "gopls": {
    "ui.completion.usePlaceholders": true,
    "ui.semanticTokens": true,
    "ui.codelenses": {
      "gc_details": false,
      "generate": true,
      "regenerate_cgo": true,
      "test": true,
      "tidy": true,
      "upgrade_dependency": true,
      "vendor": true
    },
    "analyses": {
      "unusedparams": true,
      "shadow": false,
      "unusedwrite": false
    },
    "staticcheck": false,
    "gofumpt": true
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.snippetSuggestions": "none"
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // ==================
  // Python Language
  // ==================
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.indexing": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.memory.keepLibraryAst": true,
  "python.languageServer": "None",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.lintOnSave": false,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "100"],
  "python.sortImports.args": ["--profile", "black"],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [100],
    "editor.wordBasedSuggestions": "off"
  },

  // ==================
  // TypeScript / JavaScript / React
  // ==================
  "typescript.tsdk": "platforms/web/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "typescript.disableAutomaticTypeAcquisition": true,
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // ==================
  // YAML
  // ==================
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "yaml.schemas": {
    "kubernetes": ["deployments/k8s/**/*.yaml", "deployments/helm/**/templates/*.yaml"]
  },
  "yaml.customTags": [
    "!And",
    "!Base64",
    "!Cidr",
    "!Equals",
    "!FindInMap",
    "!GetAtt",
    "!GetAZs",
    "!If",
    "!ImportValue",
    "!Join",
    "!Not",
    "!Or",
    "!Ref",
    "!Select",
    "!Split",
    "!Sub"
  ],

  // ==================
  // Markdown
  // ==================
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // ==================
  // Protobuf
  // ==================
  "[proto3]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ==================
  // Docker
  // ==================
  "[dockerfile]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // ==================
  // Shell Scripts
  // ==================
  "[shellscript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // ==================
  // SQL
  // ==================
  "[sql]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // ==================
  // Makefile
  // ==================
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  // ==================
  // Git
  // ==================
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreLimitWarning": true,
  "git.untrackedChanges": "separate",

  // ==================
  // Terminal
  // ==================
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontFamily": "Monaco, 'Courier New', monospace",

  // ==================
  // Extensions
  // ==================
  // ESLint
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.lintTask.enable": false,

  // Prettier
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "prettier.printWidth": 100,
  "prettier.requireConfig": false,

  // ==================
  // Testing
  // ==================
  "go.testEnvVars": {
    "GO_ENV": "test"
  },

  // ==================
  // Workbench Performance
  // ==================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.list.smoothScrolling": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.maxComputationTime": 5000,

  // ==================
  // Security & Privacy
  // ==================
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.enabled": false,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "update.mode": "none",

  // ==================
  // Performance Tuning
  // ==================
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true
  },
  "emmet.showExpandedAbbreviation": "never",
  "breadcrumbs.enabled": true,
  "problems.showCurrentInStatus": true,
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "typescript.surveys.enabled": false,
  "javascript.suggest.names": false,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": false
}
