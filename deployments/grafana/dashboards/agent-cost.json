{
  "dashboard": {
    "title": "Agent Engine - Cost Dashboard",
    "tags": ["agent-engine", "cost"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Cost (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(agent_cost_usd_total[24h]))",
            "legendFormat": "Total Cost"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Cost per Task",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(agent_cost_usd_total[1h])) / sum(increase(agent_tasks_total[1h]))",
            "legendFormat": "Avg Cost/Task"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.05, "color": "yellow" },
                { "value": 0.1, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Cost Trend",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(agent_cost_usd_total[5m]))",
            "legendFormat": "Cost/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Cost by Tenant (Top 10)",
        "type": "bargauge",
        "targets": [
          {
            "expr": "topk(10, sum(increase(agent_cost_usd_total[24h])) by (tenant_id))",
            "legendFormat": "{{tenant_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": { "h": 10, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 5,
        "title": "Cost by Mode",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(agent_cost_usd_total[24h])) by (mode)",
            "legendFormat": "{{mode}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": { "h": 10, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 6,
        "title": "Token Consumption (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(agent_tokens_total[24h]))",
            "legendFormat": "Total Tokens"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        },
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 18 }
      },
      {
        "id": 7,
        "title": "Budget Usage by Tenant",
        "type": "table",
        "targets": [
          {
            "expr": "sum(agent_budget_usage_ratio) by (tenant_id)",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "gridPos": { "h": 10, "w": 12, "x": 6, "y": 18 }
      },
      {
        "id": 8,
        "title": "Tool Call Cost Distribution",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(tool_call_cost_usd_total[5m])) by (tool_name)",
            "legendFormat": "{{tool_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 }
      }
    ],
    "refresh": "1m",
    "schemaVersion": 27,
    "version": 1
  }
}
