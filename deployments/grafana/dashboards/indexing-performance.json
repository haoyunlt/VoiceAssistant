{
  "dashboard": {
    "title": "Indexing Service - Performance Dashboard",
    "uid": "indexing-performance",
    "tags": ["indexing", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Document Processing Latency (P95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(indexing_document_processing_seconds_bucket[5m]))",
            "legendFormat": "{{tenant_id}} - {{document_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Document Processing Latency",
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Document processing P95 latency exceeded 5s"
        }
      },
      {
        "id": 2,
        "title": "Throughput (docs/s)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(indexing_documents_processed_total[5m])",
            "legendFormat": "{{status}} - {{tenant_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Documents/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Batch Processing Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(batch_processing_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{tenant_id}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(batch_processing_seconds_bucket[5m]))",
            "legendFormat": "P50 - {{tenant_id}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Streaming Processing Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "streaming_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Task Queue Size",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "indexing_queue_size",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Queue Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Task Wait Time",
        "type": "graph",
        "gridPos": {"x": 8, "y": 16, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(indexing_task_wait_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{priority}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Wait Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"x": 16, "y": 16, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(indexing_documents_processed_total{status=\"success\"}[5m]) / rate(indexing_documents_processed_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "red", "value": 0},
            {"color": "yellow", "value": 90},
            {"color": "green", "value": 95}
          ]
        }
      },
      {
        "id": 8,
        "title": "Chunks Created",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(indexing_chunks_created_total[5m])) * 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 9,
        "title": "Vectors Stored",
        "type": "stat",
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(indexing_vectors_stored_total[5m])) * 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(indexing_errors_total[5m])) * 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "green", "value": 0},
            {"color": "yellow", "value": 5},
            {"color": "red", "value": 10}
          ]
        }
      },
      {
        "id": 11,
        "title": "Embedding Latency",
        "type": "graph",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(indexing_embedding_seconds_bucket[5m]))",
            "legendFormat": "{{model}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "tenant_id",
          "type": "query",
          "query": "label_values(indexing_documents_processed_total, tenant_id)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Indexing.*\"}",
          "name": "Indexing Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{annotations.summary}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
